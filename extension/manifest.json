{
    "name": "NoteDamus",
    "description": "A demo extention",
    "version": "1.0",
    "manifest_version": 3,

    "background": {
        "service_worker": "background.js"
    },

    "permissions": [
        "storage",
        "declarativeContent",
        "contextMenus",
        "tabs",
        "activeTab",
        "scripting"
    ],

    "icons": {
      "128": "logo128.png",
      "48": "logo48.png",
      "16": "logo16.png"
    },
  
    "content_scripts":[
        {
            "matches": ["<all_urls>"],
            "css": ["style.css"],
            "run_at": "document_idle",
            "js": ["content.js"]
        }
    ],

    "action":{
        "default_popup": "popup.html"
    },

    "commands": {
        "save": {
          "suggested_key": {
            "default": "Ctrl+Shift+S"
          },
          "description": "Save the Note"
        }
      }
    
  }